<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Text View for Calculator Display -->
    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="2dp"
        android:textAlignment="textEnd"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text="0"
        android:background="#EEEEEE" >

    </TextView>

    <!-- Row of Clear, Pos/Neg, Percentage, and Divide Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Clear Button -->
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="C"
            android:background="@drawable/button_box" />

        <!-- ChangePosNeg Button -->
        <Button
            android:id="@+id/buttonChangePosNeg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="+/-"
            android:background="@drawable/button_box" />

        <!-- Percentage Button -->
        <Button
            android:id="@+id/buttonPercentage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="%"
            android:background="@drawable/button_box" />

        <!-- Divide Button -->
        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="/"
            android:background="@drawable/button_box" />

    </LinearLayout>

    <!-- Row of 7, 8, 9, and Multiply Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 7 Button -->
        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="7"
            android:background="@drawable/button_box" />

        <!-- 8 Button -->
        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="8"
            android:background="@drawable/button_box" />

        <!-- 9 Button -->
        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="9"
            android:background="@drawable/button_box" />

        <!-- Multiply Button -->
        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="X"
            android:background="@drawable/button_box" />

    </LinearLayout>

    <!-- Row of 4, 5, 6, and Minus Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 4 Button -->
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="4"
            android:background="@drawable/button_box" />

        <!-- 5 Button -->
        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="5"
            android:background="@drawable/button_box" />

        <!-- 6 Button -->
        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="6"
            android:background="@drawable/button_box" />

        <!-- Minus Button -->
        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="-"
            android:background="@drawable/button_box" />

    </LinearLayout>

    <!-- Row of 1, 2, 3, and Add Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 1 Button -->
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="1"
            android:background="@drawable/button_box" />

        <!-- 2 Button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="2"
            android:background="@drawable/button_box" />

        <!-- 3 Button -->
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="3"
            android:background="@drawable/button_box" />

        <!-- Add Button -->
        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="+"
            android:background="@drawable/button_box" />

    </LinearLayout>

    <!-- Row of 0, Decimal, and Equals Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 0 Button -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="0"
            android:background="@drawable/button_box" />

        <!-- Decimal Button -->
        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="."
            android:background="@drawable/button_box" />

        <!-- Equals Button -->
        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:text="="
            android:background="@drawable/button_box" />

    </LinearLayout>

</LinearLayout>
